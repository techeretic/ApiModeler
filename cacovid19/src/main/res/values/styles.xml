<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="country_values">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/item_cases_padding</item>
        <item name="android:paddingStart">@dimen/item_cases_padding</item>
        <item name="android:paddingBottom">@dimen/item_cases_padding</item>
        <item name="android:paddingEnd">@dimen/item_cases_end_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="selected_sort_option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/item_module_api_padding</item>
        <item name="android:textSize">@dimen/item_cases_text_size</item>
        <item name="android:layout_margin">@dimen/item_sort_option_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/item_sort_option_elevation</item>
    </style>
    <style name="sort_option" parent="selected_sort_option">
        <item name="android:elevation">@dimen/item_sort_option_elevation</item>
    </style>
    <style name="total_values" parent="country_values">
        <item name="android:textSize">@dimen/item_total_text_size</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>
</resources>