<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_country_padding"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
            android:textSize="@dimen/item_module_text_size"
            android:autoSizeTextType="uniform"
            android:layout_margin="4dp"
            tools:text="County Name" />

        <TextView
            android:id="@+id/last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="@dimen/item_country_padding"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textSize="@dimen/item_small_text_size"
            android:gravity="start"
            tools:text="Last updated time"/>

        <TextView
            android:id="@+id/counties"
            style="@style/total_values"
            tools:text="@string/number_of_counties"/>

        <TextView
            android:id="@+id/cases"
            style="@style/total_values"
            tools:text="@string/number_of_cases"/>

        <TextView
            android:id="@+id/critical"
            style="@style/total_values"
            tools:text="@string/number_of_critical" />

        <TextView
            android:id="@+id/deaths"
            style="@style/total_values"
            android:background="@drawable/county_sorted_by_text_bg"
            tools:text="@string/number_of_deaths" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>