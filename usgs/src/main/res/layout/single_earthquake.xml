<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/earthquake_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_eq_location_padding"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
            android:textSize="@dimen/item_module_text_size"
            tools:text="USGS Earthquakes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/intensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_margin="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:paddingBottom="@dimen/item_eq_intensity_padding"
            android:paddingStart="@dimen/item_eq_intensity_padding"
            android:paddingEnd="@dimen/item_eq_intensity_padding"
            tools:text="@string/eq_intensity" />
    </LinearLayout>
</androidx.cardview.widget.CardView>